extends layout.pug

block body
    if typeof req.query.error !== "undefined"
        fieldset
            legend Error
            = errors[Number(req.query.error)]
    form(action="/login",method="POST",type="application/x-www-form-urlencoded",style="text-align:center; margin-top: 100px")
        input.h2.blueunderline(type="text",name="username",placeholder="Username",required)
        br
        br
        input.h2.blueunderline(type="password",name="password",placeholder="Password",required)
        br
        br
        input.h2.submitpost(type="submit",value="Login")
        br
        br
        span(style="color:#05b")
            | Don't have an account? 
            a(href="/register") Register