extends layout
block body
    h2 Editing info page
    form(action="/kb/" + infopage.id + "/edit",method="POST",enctype="application/x-www-form-urlencoded")
        .issue-tag
            .date="Authored by " + infopage.fullname + " on " + infopage.dateofcreation
            .date="Edited on " + infopage.dateofedit
        input.h2.blueunderline.issue-name(type="text",name="newtitle",value=infopage.pagename,style="width:100%")
        .entry
            textarea.submit-text(name="newtext")=infopage.containedtext
        input.submitpost(type="submit", value="Repost",style="float:right")