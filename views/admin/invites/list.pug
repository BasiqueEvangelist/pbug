extends ../../layout.pug

block body
    ul.issues-list
        each invite in invites
            li
                span(id="inviteid-"+invite.id)= invite.uid
                a(href=vroot+"admin/invites/"+invite.uid+"/remove",style="display:inline")
                    img(src=vroot+"static/cross.png",height=20,width=20)
                a.copier(href="javascript:void(0)",data-clipboard-target="#inviteid-"+invite.id) Copy
append scripts
    script(src="https://cdn.jsdelivr.net/npm/clipboard@2/dist/clipboard.min.js")
    script.
        var clip = new ClipboardJS(".copier");
        clip.on("error",function() {
            $(".copier").remove();
        });